rules_version = '2';

// Firebase Storage Security Rules for WildMind AI
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow read access to all files (images are not sensitive)
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write access to generated images folder
    match /generated-images/{imageId} {
      allow write: if true;
      allow delete: if true;
    }
    
    // Allow write access to uploaded images folder
    match /uploaded-images/{imageId} {
      allow write: if true;
      allow delete: if true;
    }
    
    // Allow write access to any other folders (for flexibility)
    match /{folder}/{imageId} {
      allow write: if true;
      allow delete: if true;
    }
  }
}

// Note: These rules allow public read access and unrestricted write access.
// In production, you may want to add authentication requirements:
//
// For authenticated users only:
// allow read, write: if request.auth != null;
//
// For specific user ownership:
// allow read, write: if request.auth != null && request.auth.uid == resource.metadata.owner;
//
// For size limits:
// allow write: if request.resource.size < 10 * 1024 * 1024; // 10MB limit
